{
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "eslint": "^9.3.0",
        "live-server": "^1.2.2",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "nunjucks": "^3.2.4",
        "parcel-bundler": "^1.12.5",
        "postcss": "^8.4.38",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.1.0",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.3"
    },
    "scripts": {
        "start": "npm-run-all --parallel watch serve",
        "watch": "npm-run-all --parallel watch:*",
        "watch:mustache": "nodemon -w ./src -e html --exec node ./nunjucks.render.js",
        "watch:css": "postcss ./src/styles.css -o ./build/styles.css -w",
        "watch:js": "parcel watch ./src/index.js --out-dir ./build --no-hmr",
        "serve": "live-server ./build"
    }
}
